int main(string[] args) {
    Test.init(ref args);

    TestSuite root = TestSuite.get_root();
    root.add_suite(new TestAssertions().suite);
    root.add_suite(new CollectionAssertions().suite);

    MainLoop loop = new MainLoop ();

    int ret = -1;
    Idle.add(() => {
            ret = Test.run();
            loop.quit();
            return false;
        });

    loop.run();
    return ret;
}
