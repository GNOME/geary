<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ComponentsInspectorLogView" parent="GtkBox">
    <property name="orientation">vertical</property>
    <style>
      <class name="geary-inspector-log-viewer"/>
    </style>

    <child>
      <object class="GtkSearchBar" id="search_bar">
        <property name="name">search_bar</property>
        <property name="hexpand">True</property>
        <!-- XXX GTK4 check that this works -->
        <property name="key-capture-widget">ComponentsInspectorLogView</property>
        <child>
          <object class="GtkSearchEntry" id="search_entry">
            <signal name="search-changed" handler="on_logs_search_changed"/>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar_policy">never</property>
            <child>
              <object class="GtkListBox" id="sidebar">
                <property name="hexpand">False</property>
                <property name="selection_mode">none</property>
                <signal name="row-activated" handler="on_sidebar_row_activated"/>
                <style>
                  <class name="sidebar"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="logs_scroller">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkListView" id="logs_view">
                <property name="model">
                  <object class="GtkMultiSelection" id="selection">
                    <signal name="selection-changed" handler="on_logs_selection_changed"/>
                    <property name="model">
                      <object class="GtkFilterListModel">
                        <property name="filter">
                          <object class="GtkCustomFilter" id="logs_filter">
                          </object>
                        </property>
                        <property name="model">
                          <object class="GListStore" id="logs_store">
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </property>
                <property name="factory">
                  <object class="GtkSignalListItemFactory">
                    <signal name="setup" handler="on_item_factory_setup"/>
                    <signal name="bind" handler="on_item_factory_bind"/>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
