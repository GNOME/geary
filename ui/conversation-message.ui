<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ConversationMessage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox" id="summary">
        <property name="orientation">horizontal</property>
        <property name="hexpand">True</property>
        <property name="spacing">6</property>
        <child>
          <object class="AdwAvatar" id="avatar">
            <property name="valign">start</property>
            <property name="show-initials">True</property>
            <property name="size">48</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="hexpand">True</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkBox" id="compact_header">
                <property name="hexpand">True</property>
                <property name="orientation">vertical</property>

                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkLabel" id="compact_from">
                        <property name="visible">True</property>
                        <property name="hexpand">True</property>
                        <property name="label" translatable="yes">From &lt;email&gt;</property>
                        <property name="ellipsize">end</property>
                        <property name="xalign">0</property>
                        <style>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="compact_date">
                        <property name="label" translatable="yes">1/1/1970	</property>
                        <property name="ellipsize">end</property>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="compact_body">
                    <property name="halign">start</property>
                    <property name="hexpand">True</property>
                    <property name="label" translatable="yes">Preview body text.</property>
                    <property name="ellipsize">end</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="geary-header-value"/>
                    </style>
                  </object>
                </child>
                <style>
                  <class name="geary-headers"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="expanded_header">
                <property name="visible">False</property>
                <property name="hexpand">True</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkGrid" id="from_header">
                    <property name="hexpand">True</property>
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkFlowBox" id="from">
                        <property name="hexpand">True</property>
                        <property name="column_spacing">2</property>
                        <property name="max_children_per_line">4</property>
                        <property name="selection_mode">none</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="date">
                        <property name="valign">baseline</property>
                        <property name="label" translatable="yes">1/1/1970	</property>
                        <property name="ellipsize">end</property>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="sender_header">
                    <property name="visible">False</property>
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkLabel" id="sender_label">
                        <property name="label" translatable="yes">Sent by:</property>
                        <property name="yalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkFlowBox" id="sender_address">
                        <property name="visible">False</property>
                        <property name="valign">start</property>
                        <property name="hexpand">True</property>
                        <property name="column_spacing">2</property>
                        <property name="max_children_per_line">4</property>
                        <property name="selection_mode">none</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="reply_to_header">
                    <property name="visible">False</property>
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkLabel" id="reply_to_label">
                        <property name="label" translatable="yes">Reply to:</property>
                        <property name="yalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkFlowBox" id="reply_to_addresses">
                        <property name="valign">start</property>
                        <property name="hexpand">True</property>
                        <property name="column_spacing">2</property>
                        <property name="max_children_per_line">4</property>
                        <property name="selection_mode">none</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="subject">
                    <property name="visible">False</property>
                    <property name="halign">start</property>
                    <property name="hexpand">True</property>
                    <property name="label" translatable="yes">Subject</property>
                    <property name="wrap">True</property>
                    <property name="wrap_mode">word-char</property>
                    <property name="selectable">True</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="geary-header-value"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="to_header">
                    <property name="visible">False</property>
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkLabel" id="to_label">
                        <property name="label" translatable="yes">To:</property>
                        <property name="yalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="ConversationMessageContactList" id="to_list">
                        <property name="valign">start</property>
                        <property name="hexpand">True</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="cc_header">
                    <property name="orientation">horizontal</property>
                    <property name="visible">False</property>
                    <child>
                      <object class="GtkLabel" id="cc_label">
                        <property name="label" translatable="yes">Cc:</property>
                        <property name="yalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="ConversationMessageContactList" id="cc_list">
                        <property name="valign">start</property>
                        <property name="hexpand">True</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="bcc_header">
                    <property name="orientation">horizontal</property>
                    <property name="visible">False</property>
                    <child>
                      <object class="GtkLabel" id="bcc_label">
                        <property name="label" translatable="yes">Bcc:</property>
                        <property name="yalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="geary-header"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="ConversationMessageContactList" id="bcc_list">
                        <property name="valign">start</property>
                        <property name="hexpand">True</property>
                        <signal name="child-activated" handler="on_address_box_child_activated"/>
                        <style>
                          <class name="geary-header-value"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="geary-headers"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <style>
          <class name="geary-message-summary"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="body_revealer">
        <property name="transition_type">slide-up</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="ComponentsInfoBarStack" id="info_bars">
                <property name="visible">False</property>
                <property name="algorithm">priority-queue</property>
              </object>
            </child>
            <child>
              <object class="GtkOverlay">
                <property name="height_request">6</property>
                <child>
                  <object class="GtkBox" id="body_container">
                    <property name="orientation">vertical</property>
                    <style>
                      <class name="geary-message-body"/>
                    </style>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkProgressBar" id="body_progress">
                    <property name="valign">start</property>
                    <style>
                      <class name="geary-body-progress"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="geary-message"/>
    </style>
  </template>
</interface>
