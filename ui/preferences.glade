              </object>
              <packing>
                <property name="left_attach">0</property>
                <property name="top_attach">4</property>
              </packing>
            </child>
            <child>
              <object class="GtkCheckButton" id="spell_check">
                <property name="label" translatable="yes">Enable _spell checking</property>
