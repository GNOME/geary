    <child type="titlebar">
      <object class="GtkHeaderBar" id="headerbar">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="title">Preferences</property>
        <property name="show_close_button">True</property>
      </object>
    </child>
  </object>
</interface>
