<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ConversationListRow" parent="GtkListBoxRow">
    <style>
      <class name="conversation-list"/>
    </style>
    <child>
      <object class="GtkBox" id="container">
        <property name="has-tooltip">True</property>
        <child>
          <object class="GtkCheckButton" id="selected_button">
            <property name="visible">False</property>
            <property name="receives-default">True</property>
            <property name="vexpand">True</property>
            <property name="can-focus">False</property>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="details">
            <property name="orientation">vertical</property>
            <property name="baseline-position">top</property>
            <style>
              <class name="details"/>
            </style>
            <child>
              <object class="GtkLabel" id="participants">
                <property name="use-markup">True</property>
                <property name="ellipsize">end</property>
                <property name="xalign">0</property>
                <style>
                  <class name="participants"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="subject">
                <property name="halign">start</property>
                <property name="hexpand">True</property>
                <property name="ellipsize">end</property>
                <property name="single-line-mode">True</property>
                <property name="xalign">0</property>
                <style>
                  <class name="subject"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="preview">
                <property name="halign">start</property>
                <property name="hexpand">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="ellipsize">end</property>
                <property name="lines">1</property>
                <property name="xalign">0</property>
                <style>
                  <class name="preview"/>
                  <class name="tertiary"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="indicators">
            <property name="vexpand">True</property>
            <property name="orientation">vertical</property>
             <child>
              <object class="GtkLabel" id="date">
                <style>
                  <class name="date"/>
                  <class name="tertiary"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="halign">end</property>
                <property name="spacing">5</property>
                <child>
                  <object class="GtkImage" id="flagged_icon">
                    <property name="icon-name">starred-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="count_badge">
                    <style>
                      <class name="count-badge"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
